page, .container {
  width: 100%;
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  padding-top: 30rpx;
}
.search_box {
  position: relative;
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}
.search_box .cancel_icon {
  position: absolute;
  font-size: 40rpx;
  top: 15rpx;
  right: 50rpx;
  z-index: 99;
}
.search_box .search_icon {
  position: absolute;
  font-size: 40rpx;
  top: 15rpx;
  left: 50rpx;
  z-index: 99;
}
.search_box input {
  width: 100%;
  height: 100%;
  background-color: #f7f7f7;
  box-sizing: border-box;
  border-radius: 35rpx;
  padding-left: 80rpx;
}
.search_container {
  padding: 0 30rpx;
}
.history_list .history_title {
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
}
.history_list .history_title .title {
  font-weight: bold;
}
.history_list .list {
  display: flex;
  margin-top: 20rpx;
}
.history_list .list .history_item {
  height: 60rpx;
  padding: 0 20rpx;
  background-color: #f7f7f7;
  line-height: 70rpx;
  border-radius: 35rpx;
  margin-right: 20rpx;
}
.hot_list {
  margin-top: 30rpx;
  padding: 0 20rpx;
}
.hot_list .title {
  font-weight: bold;
}
.hot_list .list .hot_item {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
  align-items: center;
}
.hot_list .list .hot_item .item_left {
  display: flex;
  align-items: center;
}
.hot_list .list .hot_item .item_left .sort {
  color: red;
  margin-right: 30rpx;
}
.hot_list .list .hot_item .item_left .gray {
  color: gray;
}
.item_left .top {
  color: #000;
  font-size: 34rpx;
}
.item_left .bottom {
  color: #999;
  font-size: 24rpx;
}
.hot_list .list .hot_item .item_right {
  color: #999;
  font-size: 24rpx;
}
.scroll_box {
  flex: 1;
  overflow: hidden;
}
.search_word {
  padding: 0 20rpx;
  color: #5783b2;
}
.suggest_list {
  padding: 0 20rpx;
}
.suggest_item {
  display: flex;
  color: #999;
  font-size: 30rpx;
  margin-top: 30rpx;
}
.suggest_item .search_icon {
  margin-right: 20rpx;
}
.search_result {
  padding: 0 20rpx;
}
.search_result .search_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 2px solid #f7f7f7;
}
.search_result .search_item .item_left .song_title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}
.search_result .search_item .item_left .singer {
  font-size: 24rpx;
}
.search_result .search_item .item_left .singer .blue {
  color: #5783b2;
}