/* pages/songList/songList.wxss */
page, .container {
  width: 100%;
  height: 100%;
}
.container {
  position: relative;
  padding-top: 150rpx;
}
.container .bg_box {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  filter: blur(10rpx);
  z-index: -1;
}
.song_list_head {
  padding: 30rpx;
}
.song_list_head .head_top {
  display: flex;
  margin-bottom: 30rpx;
}
.song_list_head .head_top .img_box {
  width: 260rpx;
  height: 250rpx;
  flex-shrink: 0;
}
.song_list_head .head_top .img_box image {
  width: 100%;
  height: 100%;
}
.song_list_head .head_top .head_content {
  margin-left: 40rpx;
 /*  color: #fff; */
}
.song_list_head .head_top .head_content .title {
  font-size: 34rpx;
}
.song_list_head .head_top .head_content .sub_title {
  font-size: 28rpx;
  margin: 30rpx 0;
}
.song_list_head .head_top .head_content .discribe {
  font-size: 22rpx;
}
.song_list_head .head_bottom {
  width: 320rpx;
  height: 70rpx;
  line-height: 70rpx;
  border-radius: 35rpx;
  margin: 0 auto;
  text-align: center;
  font-size: 28rpx;
  background-color: #7dabde;
  color: #fff;
}
.song_list_content {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 10rpx;
}
.song_list_content .play_all {
  font-size: 34rpx;
}
.song_list_content .play_all .icon {
  margin-right: 30rpx;
  font-size: 40rpx;
}
.song_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 40rpx;
}
.song_item .item_left {
  display: flex;
  align-items: center;
}
.song_item .item_left .sort {
  margin-right: 30rpx;
  color: #999;
}
.song_item .item_left .singer {
  font-size: 22rpx;
  color: #999;
}
#canvas {
  position: fixed;
  top: 0;
  width: 100%;
  height: 150rpx;
  z-index: -1;
}