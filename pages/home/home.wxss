.container {
  padding: 0 30rpx;
  padding-top: 56rpx;
  /* padding-top: 150rpx; */
}
.container .header {
  text-align: center;
  margin-bottom: 112rpx;
}
.container .search_box {
  width: 100%;
  height: 70rpx;
  border-radius: 35rpx;
  overflow: hidden;
  position: relative;
  margin-top: 50rpx
}
.container .search_box input {
  width: 100%;
  height: 100%;
  background-color: #e9e9e9;
  padding-left: 80rpx;
  box-sizing: border-box;
}
.container .search_box .search_icon {
  position: absolute;
  left: 26rpx;
  top: 17rpx;
  width: 36rpx;
  height: 36rpx;
}

.list_box {
  margin-top: 30rpx;

}
.list_item {
  /* 弹性盒特点,  当容器内的子元素宽度总和大于容器的宽度时，会使子元素挤压*/
  display: flex;
  margin-bottom: 20rpx;
}
.list_item .img_box {
  width: 208rpx;
  height: 208rpx;
  border-radius: 8rpx;
  overflow: hidden;
  flex-shrink: 0;
}
.list_item .img_box image {
  width: 100%;
  height: 100%;
}
.song_list {
  display: flex;
  padding: 20rpx 0;
  margin-left: 20rpx;
  flex-direction: column;
  justify-content: space-between;
  flex: 1;
  overflow: hidden;
}
.list_item .song_item {
  font-size: 28rpx;
  color: #333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}