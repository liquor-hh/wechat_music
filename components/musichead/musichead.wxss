.header_container {
  position: fixed;
  height: 150rpx;
  width: 100%;
  left: 0;
  top: 0;
  z-index: 99;
}
.header_container .header_title {
  width: 280rpx;
  position: absolute;
  left: 50%;
  top: 55rpx;
  transform: translateX(-50%);
  text-overflow: ellipsis;
  overflow: hidden;
  text-align: center;
  white-space: nowrap;
}
.icon_box {
  display: flex;
  align-items: center;
  position: absolute;
  left: 30rpx;
  top: 55rpx;
  width: 180rpx;
  height: 60rpx;
  border-radius: 30rpx;
}
.icon_box .icon {
  flex: 1;
}
.black_icon {
  background-color: #fff;
  color: #000;
  border: 2rpx solid #ccc
}
.white_icon {
  background-color: rgba(0, 0, 0, .5);
  color: #fff;
}
.header_bg {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  filter: blur(10rpx);
}